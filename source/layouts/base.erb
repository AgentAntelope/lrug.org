<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= page_title %> | London Ruby User Group</title>

    <link href="<%= rss_path %>" rel="alternate" title="RSS" type="application/rss+xml" />
    <link rel="shortcut icon" href="http://assets.lrug.org/favicon.ico" />
    <link rel="icon" href="http://assets.lrug.org/favicon.ico" />

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div id="page">
      <%= partial 'header' %>
      <div id="main">
        <div id="content-wrapper">
          <div id="content">
            <%= yield %>
          </div>
        </div>
        <div id="sidebar-wrapper">
          <div id="sidebar">
            <%= partial 'sidebar' %>
          </div>
        </div>
      </div>
      <%= partial 'footer' %>
    </div>
  </body>
</html>
