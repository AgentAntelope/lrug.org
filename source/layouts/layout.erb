<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %> | London Ruby User Group</title>

    <link href="/rss/<% if_url %r{^/book-reviews/} do %>book-reviews<% end %><% if_url %r{^/meetings} do %>meetings<% end %><% if_url %r{^/podcasts/} do %>podcasts<% end %>" rel="alternate" title="RSS" type="application/rss+xml" />
    <link rel="shortcut icon" href="http://assets.lrug.org/favicon.ico" />
    <link rel="icon" href="http://assets.lrug.org/favicon.ico" />

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div id="page">
      <%= partial 'header' %>
      <div id="main">
        <div id="content-wrapper">
          <div id="content">
            <% unless_url %r{^/$} do %>
              <h1><%= current_page.data.title %></h1>
            <% end %>
            <% if_url %r{^/meetings/\d{4}/\d{2}/\d{2}/.+$} do %>
              <% unless_url %r{-archives/$} do %>
                <%= yield_content :sponsors %><div class="vevent">
              <% end %>
            <% end %>
            <%= yield %>
            <% if content_for?(:extended) %>
              <div id="extended">
                <%= yield_content :extended %>
              </div>
            <% end %>
            <% if_url %r{^/meetings/\d{4}/\d{2}/\d{2}/.+$} do %>
              <% unless_url %r{-archives/$} do %>
                </div>
              <% end %>
            <% end %>
            <% if_url %r{^/podcasts/\d{4}/\d{2}/\d{2}/.+"} do %>
              <% unless_url %r{-podcasts/$} do %>
                <%= yield_content :download_link %>
              <% end %>
            <% end %>
            <% if_url %r{^/(meetings|podcasts)/\d{4}/\d{2}/\d{2}/.+} do %>
              <% unless_url %r{"-(meetings|podcasts)/$} do %>
                <p class="info">Posted by <%= current_page.data.created_by.name %> on <%= date_format current_page.data.published_at %></p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div id="sidebar-wrapper">
          <div id="sidebar">
            <%= partial 'sidebar' %>
          </div>
        </div>
      </div>
      <%= partial 'footer' %>
    </div>
  </body>
</html>
