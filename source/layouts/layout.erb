<% wrap_layout :base do %>
    <div id="page">
      <%= partial 'header' %>
      <div id="main">
        <div id="content-wrapper">
          <div id="content">
            <% unless_url %r{^/$} do %>
              <h1><%= current_page.data.title %></h1>
            <% end %>
            <% if_url %r{^/meetings/\d{4}/\d{2}/\d{2}/.+$} do %>
              <% unless_url %r{-archives/$} do %>
                <%= yield_content :sponsors %><div class="vevent">
              <% end %>
            <% end %>
            <%= yield %>
            <% if content_for?(:extended) %>
              <div id="extended">
                <%= yield_content :extended %>
              </div>
            <% end %>
            <% if_url %r{^/meetings/\d{4}/\d{2}/\d{2}/.+$} do %>
              <% unless_url %r{-archives/$} do %>
                </div>
              <% end %>
            <% end %>
            <% if_url %r{^/podcasts/\d{4}/\d{2}/\d{2}/.+"} do %>
              <% unless_url %r{-podcasts/$} do %>
                <%= yield_content :download_link %>
              <% end %>
            <% end %>
            <% if_url %r{^/(meetings|podcasts)/\d{4}/\d{2}/\d{2}/.+} do %>
              <% unless_url %r{"-(meetings|podcasts)/$} do %>
                <p class="info">Posted by <%= current_page.data.created_by.name %> on <%= date_format current_page.data.published_at %></p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div id="sidebar-wrapper">
          <div id="sidebar">
            <%= partial 'sidebar' %>
          </div>
        </div>
      </div>
      <%= partial 'footer' %>
    </div>
<% end %>
