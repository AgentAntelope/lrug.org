<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %> | London Ruby User Group</title>

    <link href="/rss/<r:if_url matches="^/book-reviews/">book-reviews</r:if_url><r:if_url matches="^/meetings">meetings</r:if_url><r:if_url matches="^/podcasts/">podcasts</r:if_url>" rel="alternate" title="RSS" type="application/rss+xml" />
    <link rel="shortcut icon" href="http://assets.lrug.org/favicon.ico" />
    <link rel="icon" href="http://assets.lrug.org/favicon.ico" />

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div id="page">
      <%= partial 'header' %>
      <div id="main">
        <div id="content-wrapper">
          <div id="content">
            <r:unless_url matches="^/$"><h1><%= current_page.data.title %></h1></r:unless_url>
            <r:if_url matches="^/meetings/\d{4}/\d{2}/\d{2}/.+$"><r:unless_url matches="-archives/$"><r:snippet name="sponsors" /><div class="vevent"></r:unless_url></r:if_url>
            <%= yield %>
            <r:if_content part="extended">
            <div id="extended">
              <r:content part="extended" />
            </div>
            </r:if_content>
            <r:if_url matches="^/meetings/\d{4}/\d{2}/\d{2}/.+$"><r:unless_url matches="-archives/$"></div></r:unless_url></r:if_url>
            <r:if_url matches="^/podcasts/\d{4}/\d{2}/\d{2}/.+"><r:unless_url matches="-podcasts/$"><r:content part="download_link" inherit="true"/></r:unless_url></r:if_url>
            <r:if_url matches="^/(meetings|podcasts)/\d{4}/\d{2}/\d{2}/.+"><r:unless_url matches="-(meetings|podcasts)/$"><p class="info">Posted by <r:author /> on <r:date /></p></r:unless_url></r:if_url>
          </div>
        </div>
        <div id="sidebar-wrapper">
          <div id="sidebar">
            <%= partial 'sidebar' %>
          </div>
        </div>
      </div>
      <%= partial 'footer' %>
    </div>
  </body>
</html>
